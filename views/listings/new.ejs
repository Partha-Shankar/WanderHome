<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <form method = "POST" action = "/listings" enctype="multipart/form-data" novalidate class="needs-validation">
        <div>
            <label for="title">Title:   </label>
            <input name = "listing[title]" placeholder = "Title" type = "text" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a Valid Title</div>
        </div>
        <br>

        <div>
            <label for="description" class="form-label">Description: </label>
            <textarea name = "listing[description]" placeholder = "Description" rows = 5 cols = 5 class="form-control" required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a Short Description</div>
        </div>
        <br>

        <div>
            <label for="url" class="form-label">Image: </label>
            <input name = "listing[image]" type = "file" class="form-control">
            <div class="valid-feedback">Looks good!</div>
        </div>
        <br>

        <div>
            <label for="price" class="form-label">Price: </label>
            <input name = "listing[price]" placeholder = "Enter the Price" type = "Number" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a valid Price</div>
        </div>
        <br>

        <div>
            <label for="location" class="form-label">Location: </label>
            <input name = "listing[location]" placeholder = "Enter the Location" type = "text" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a Correct Location</div>
        </div>
        <br>

        <div>
            <label for="country" class="form-label">Country: </label>
            <input name = "listing[country]" placeholder = "Enter the Country" type = "text" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter a Valid Country</div>
        </div>
        <br>

        <button type = "submit" class="btn btn-dark">ADD</button><br><br>
    </form>
    </div></div>
</body>
